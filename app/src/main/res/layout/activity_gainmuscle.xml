<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:padding="16dp">




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lose Weight Goal"
        android:textSize="24sp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progressDrawable="@drawable/progress_bar_drawable"
        android:max="7"
        android:paddingBottom="20dp"
        android:progress="2"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/buttonToneUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tone Up" />

    <Button
        android:id="@+id/buttonBulkUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bulk Up" />

    <Button
        android:id="@+id/buttonGetStrong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Strong" />



    <TextView
        android:id="@+id/ageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How old are you?"
        android:textColor="@color/white"
        android:layout_marginTop="8dp"
        android:textSize="20dp"
        android:layout_marginBottom="8dp"/>
    <TextView
        android:id="@+id/infoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Information Text"
        android:layout_marginTop="20dp"
        android:visibility="gone"/>


    <EditText
        android:id="@+id/editAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter text here"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:outlineAmbientShadowColor="@color/white"
        android:background="@drawable/edit_text_outline"
        android:textAlignment="center"
        android:layout_marginBottom="40dp"
        android:inputType="number" />

    <TextView
        android:id="@+id/countryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Where do you live?"
        android:textColor="@color/white"
        android:layout_marginTop="8dp"
        android:textSize="20dp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/editCountry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Country"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:background="@drawable/edit_text_outline"
        android:textAlignment="center"
        android:layout_marginBottom="40dp"
        android:inputType="text"/>

    <EditText
        android:id="@+id/editZipCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Zip Code"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:background="@drawable/edit_text_outline"
        android:textAlignment="center"
        android:inputType="number"/>

    <TextView
        android:id="@+id/heightText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How tall are you?"
        android:textColor="@color/white"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        android:layout_marginBottom="8dp"/>

    <Spinner
        android:id="@+id/spinnerHeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:background="@drawable/spinner_background"
        android:popupBackground="#000000" />


    <TextView
        android:id="@+id/weightText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How much do you weigh?"
        android:textColor="@color/white"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        android:layout_marginBottom="8dp"/>

    <Spinner
        android:id="@+id/spinnerWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:background="@drawable/spinner_background"
        android:popupBackground="#000000" />

    <Button
        android:id="@+id/buttonNotVeryActive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Not Very Active" />

    <Button
        android:id="@+id/buttonLightlyActive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lightly Active" />

    <Button
        android:id="@+id/buttonActive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Active" />

    <Button
        android:id="@+id/buttonVeryActive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Very Active" />

    <TextView
        android:id="@+id/textViewGoalWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What's your goal weight?"
        android:textColor="#FFFFFF"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp" />


    <Spinner
        android:id="@+id/spinnerWeightGoal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:background="@drawable/spinner_background"
        android:popupBackground="#000000" />


    <TextView
        android:id="@+id/textViewWeeklyGoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is your weekly goal?"
        android:textColor="#FFFFFF"
        android:layout_marginTop="32dp" />


    <Button
        android:id="@+id/buttonLoseHalfPound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lose 0.5 lbs per week"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/buttonLose1Pound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lose 1 lbs per week"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/buttonLose1HalfPound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lose 1.5 lbs per week"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/buttonLose2Pound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lose 2 lbs per week"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email Address"
        android:textColorHint="@color/white"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:textColorHint="@color/white"
        android:inputType="textPassword"
        android:layout_below="@id/emailEditText"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:textColor="@color/white"
        android:background="@drawable/rounded_button"
        android:layout_below="@id/passwordEditText"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"

        android:layout_marginTop="20dp"
        />


    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next"
        android:backgroundTint="#0D47A1"

        android:textColor="#FFFFFF"/>






    <!-- Add more UI components here as needed -->

</LinearLayout>
