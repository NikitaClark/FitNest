<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#000000">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Let's start with goals."
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select 1 that is important to you"
            android:textSize="16sp"
            android:textColor="#FFFFFF"/>


        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progressDrawable="@drawable/progress_bar_drawable"
            android:max="7"
            android:paddingBottom="20dp"
            android:progress="1"
            android:layout_marginTop="20dp" />


        <Button
            android:id="@+id/btnLoseWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lose Weight"
            android:backgroundTint="#37474F"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnGainMuscle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gain Muscle"
            android:backgroundTint="#37474F"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next"
            android:backgroundTint="#0D47A1"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/btnNavigate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to Next Page"
            android:visibility="gone" />



    </LinearLayout>
</ScrollView>
